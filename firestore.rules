rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection: Authenticated users can read/write only their own profile
    match /users/{userId} {
      allow read, write, create, update: if request.auth.uid == userId;
    }

    // Organizations Collection: Anyone can read, no client-side writes
    match /organizations/{organizationId} {
      allow read: if true;
      allow write: if false;
    }

    // Events Collection: Anyone can read, no client-side writes
    match /events/{eventId} {
      allow read: if true;
      allow write: if false;
    }

    // Prompts Subcollection: Anyone can read, no client-side writes
    match /events/{eventId}/prompts/{promptId} {
      allow read: if true;
      allow write: if false;
    }

    // Signups Subcollection: Anyone can read, no client-side writes
    match /events/{eventId}/signups/{signupId} {
      allow read: if true;
      allow write: if false;
    }

    // Waitlist Subcollection: Anyone can read, no client-side writes
    match /events/{eventId}/waitlist/{waitlistId} {
      allow read: if true; 
      allow write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}